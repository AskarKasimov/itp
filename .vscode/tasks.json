{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run Current File",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "gcc '${file}' -o '${fileDirname}/${fileBasenameNoExtension}.o' && '${fileDirname}/${fileBasenameNoExtension}.o'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
